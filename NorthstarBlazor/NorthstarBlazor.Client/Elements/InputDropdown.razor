
<Blazored.Typeahead.BlazoredTypeahead Class="form-select inline" Style="@AdditionStyle" SearchMethod="SearchForStrings" @bind-Value="@selectedString" placeholder="Search by name...">
    <SelectedTemplate>@context</SelectedTemplate>
    <ResultTemplate>@context</ResultTemplate>
</Blazored.Typeahead.BlazoredTypeahead>

@code {
        [Parameter] public string AdditionStyle { get; set; }
        [Parameter] public string Class { get; set; }
        [Parameter] public List<string> Collection { get; set; }

        string selectedString;


    private async Task<IEnumerable<string>> SearchForStrings(string searchText)
    {
        return await Task.FromResult(Collection.Where(x=>x.ToLower().Contains(searchText)));
    }
}